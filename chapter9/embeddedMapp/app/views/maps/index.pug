                                service.nearbySearch({
                                    location: pos,
                                    radius: 10000,
                                    type: ['lodging']
                                }, callback,setSearchType("lodging"));
                            break;
                        case "parking":
                            infowindow = new google.maps.InfoWindow();
                            service = new google.maps.places.PlacesService(map);
                              service.nearbySearch({
                                  location: pos,
                                  radius: 20000,
